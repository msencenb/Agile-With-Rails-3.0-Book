<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || "Pragmatic Bookshelf" %>
	</div>
	<div id="columns">
		<div id="side">
			<div id="cart">
				<%= render @cart %>
			</div>
			<%= link_to "Home", store_path %><br />
			<a href="#">Questions</a><br />
			<a href="#">News</a><br />
			<a href="#">Contact</a><br />
			<a href="#"><%= Time.now %></a><br />
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
